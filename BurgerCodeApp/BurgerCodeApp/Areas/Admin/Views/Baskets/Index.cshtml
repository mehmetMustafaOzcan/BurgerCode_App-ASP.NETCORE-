@model dynamic

@{
    ViewData["Title"] = "All Baskets";
}

<h1>All Baskets</h1>


<table class="table">
    <thead>
        <tr>
         
            <th>
                UserName
            </th>
            <th>
                Email
            </th>
            <th>
                Total Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @item.User
            </td>
            <td>
                    @item.Email
            </td>
          
            <td>
                    @item.Total
            </td>  
           
            <td>

                    <a class="btn btn-info text-white" asp-action="UserBasketDetails" asp-route-email="@item.Email"><i class="fas fa-info-circle"></i></a>
            
            </td>
        </tr>
}
    </tbody>
</table>
