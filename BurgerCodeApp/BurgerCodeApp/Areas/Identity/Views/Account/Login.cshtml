@using BurgerCodeApp.Areas.Identity.Models;
@model UserVm
<div class="w-25 m-5 text-center">


    <form asp-action="Login" method="post" class="text-center">
        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <input type="email" asp-for="EmailAddress" class="form-control" />
                <label class="form-label" asp-for="EmailAddress">Your EmailAddress</label>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <input type="password" asp-for="Password" class="form-control" />
                <label class="form-label" asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger "></span>
            </div>
        </div>
       
       
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>
<div class="text-danger m-5">
    @Html.ValidationMessage("LoginError")
</div>


