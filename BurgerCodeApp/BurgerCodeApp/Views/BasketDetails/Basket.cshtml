@section Scripts{

        <script>
            function showConfirmation(itemId) {
            if (confirm("This Item Will Be Deleted From Your Cart, Are You Sure?")) {
                window.location.href = "/BasketDetails/Delete/" + itemId;
                }
            }
    </script>
