@model BurgerCodeApp.Models.BasketDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BasketDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BasketId" class="control-label"></label>
                <select asp-for="BasketId" class ="form-control" asp-items="ViewBag.BasketId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MenuId" class="control-label"></label>
                <select asp-for="MenuId" class ="form-control" asp-items="ViewBag.MenuId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuSize" class="control-label"></label>
                <input asp-for="MenuSize" class="form-control" />
                <span asp-validation-for="MenuSize" class="text-danger"></span>
            </div>
            @foreach (var extra in ViewBag.Extra)
            {
                <div>
                    <input type="checkbox" name="selectedExtras" value="@extra.ExtraId" id="@($"extra-{extra.ExtraId}")" />
                    <label for="@($"extra-{extra.ExtraId}")">@extra.Name</label>
                    <input type="hidden" name="extraIds" value="@extra.ExtraId" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
