@model IEnumerable<BurgerCodeApp.Models.Menu>

@{
    ViewData["Title"] = "Menus";
}




<div class="container-xxl m-0 border">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h5 class="section-title ff-secondary text-center text-primary fw-normal">Delicious</h5>
        <h1 class="mb-5">Our Menus</h1>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 wow fadeInUp mb-3" data-wow-delay="0.1s">
                <div class="team-item text-center rounded overflow-hidden">
                    <div class="rounded-2 overflow-hidden " style="position: relative; width: 100%; height: 300px;">
                        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: white;"></div>
                        <img class="img-fluid" src="@item.PicturePath" alt="Menuimage" style="object-fit: cover; position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
                    </div>
                    <div class="mt-auto">
                        <div class="d-flex flex-column">
                            <h5 class="mt-2">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <small>@item.Description</small>
                            <h6>&dollar; @Html.DisplayFor(modelItem => item.Price)</h6>
                            <div class="d-flex justify-content-center mt-3">
                                <a class="btn btn-primary btn-square mx-1 w-50" asp-controller="basketdetails" asp-action="details" asp-route-id="@item.MenuId">
                                    <i class="fa fa-cart-plus text-white"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
