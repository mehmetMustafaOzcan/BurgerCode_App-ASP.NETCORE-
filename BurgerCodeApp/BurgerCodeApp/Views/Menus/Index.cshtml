@model IEnumerable<BurgerCodeApp.Models.Menu>

@{
    ViewData["Title"] = "Index";
}


<div class="container-xxl m-0 border">
    
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Delicious</h5>
            <h1 class="mb-5">Our Menus</h1>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item text-center rounded overflow-hidden  ">
                        
                            <div class="rounded-2 overflow-hidden m-4">
                                <img class="img-fluid" src="@item.Photopath" alt="Menuimage">
                            </div>
                            <div class="mt-auto border ">
                                <div class="d-flex flex-column ">
                                    <h5 class="mb-0">@Html.DisplayFor(modelItem => item.MenuName)</h5>
                                    <small>Designationaaaa</small>
                                    <h6>&dollar; @Html.DisplayFor(modelItem => item.MenüPrice)</h6>
                                    <div class="d-flex justify-content-center mt-3">
                                    <a class="btn btn-square btn-primary mx-1" asp-controller="basketdetails" asp-action="details" asp-route-id="@item.MenuId"><i class="fas fa-basket-shopping"></i></a>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            }
        </div>
 
</div>